{
  "manifest_version": 3,
  "name": "Yeah Reilly",
  "version": "1.3.0",
  "description": "Copy the current eBook content as Markdown to the clipboard.",
  "permissions": ["activeTab", "scripting", "clipboardWrite"],
  "action": {
    "default_title": "Yeah Reilly",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
